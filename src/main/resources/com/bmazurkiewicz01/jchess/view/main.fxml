<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="root" stylesheets="@css/main-style.css" xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bmazurkiewicz01.jchess.controller.MainController">
    <GridPane fx:id="gridPane" alignment="CENTER">

    </GridPane>
    <Pane fx:id="whitePromotionPane" managed="false" visible="false" prefHeight="400" prefWidth="100"
          styleClass="promotionPane">
        <VBox layoutX="2.0" prefHeight="400.0" prefWidth="100.0">
            <Button fx:id="whitePromotionRook" prefHeight="100.0" prefWidth="100.0" styleClass="whiteRook"/>
            <Button fx:id="whitePromotionQueen" prefHeight="100.0" prefWidth="100.0" styleClass="whiteQueen"/>
            <Button fx:id="whitePromotionBishop" prefHeight="100.0" prefWidth="100.0" styleClass="whiteBishop"/>
            <Button fx:id="whitePromotionKnight" prefHeight="100.0" prefWidth="100.0" styleClass="whiteKnight"/>
        </VBox>
    </Pane>
</AnchorPane>
